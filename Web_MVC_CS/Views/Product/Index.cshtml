@model List<Product>
@{
    ViewData["Title"] = "Product Page";
    var products = Model;
    // var categories = ViewData["CategoryKey"] as List<String>;
}
@using MVC_CS.Models;

<div class="text-center">
    <h1 class="display-4">Welcome to Product page</h1>

    <table class="table">
        <thead>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantiny</th>
            <th>Category</th>
            <th>
                <a href="/Product/Create" class="btn btn-primary">Create</a>
            </th>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                    <td>@product.Category.Name</td>
                    <td>
                        <a href="/Product/Update?id=@product.Id" class="btn btn-success">Update</a>
                        <a href="/Product/Delete?id=@product.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
